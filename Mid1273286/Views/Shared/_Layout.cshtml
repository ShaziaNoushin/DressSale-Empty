<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/libs/bootstrap/css/bootstrap.css" rel="stylesheet" />
    <script src="~/libs/bootstrap/js/bootstrap.bundle.js"></script>
    @await RenderSectionAsync("styles", false)
    <style>
        body{
            padding-top:70px;
        }
    </style>
</head>
<body>
    <div class="navbar bg-light navbar-expand-md fixed-top shadow-sm px-2">
        <div class="container-fluid">
            <span class="navbar-brand">Evidence <sup>08</sup></span>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#nv" aria-controls="nv" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="navbar-collapse" id="nv">
                <ul class="navbar nav justify-content-end ">
                    <li class="nav-item ms-2">
                        <a asp-action="Index" asp-controller="Home" class="nav-link">Home</a>
                    </li>

                </ul>
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a asp-action="Index" asp-controller="Dresses" class="nav-link">Dresses</a>
                    </li>
                    <li class="nav-item">
                        <a asp-action="Index" asp-controller="Sales" class="nav-link">Sales</a>
                    </li>
                    

                </ul>

            </div>

        </div>
    </div>

    
    <div class="container-fluid mt-2">
        @RenderBody()
    </div>
    @await RenderSectionAsync("scripts", false)


</body>
</html>
